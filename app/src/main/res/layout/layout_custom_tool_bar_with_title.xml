<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="@dimen/toolbar_imageview_width"
            android:layout_height="@dimen/toolbar_imageview_height"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0"
            android:background="@drawable/imageview_selector"
            android:clipToPadding="true"
            android:scaleType="center"
            android:src="@mipmap/icon_back_black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="@dimen/toolbar_imageview_width"
            android:layout_height="@dimen/toolbar_imageview_height"
            android:layout_gravity="center"
            android:background="@drawable/imageview_selector"
            android:clipToPadding="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/theme_text_black"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="@dimen/toolbar_imageview_width"
            android:layout_height="@dimen/toolbar_imageview_height"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0"
            android:background="@drawable/imageview_selector"
            android:scaleType="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_imageview_width"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0"
            android:background="@drawable/imageview_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/theme_text_black"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_boudary_color" />
</RelativeLayout>